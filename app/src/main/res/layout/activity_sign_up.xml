<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ui"
    tools:context=".SignUpActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="110dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/instagram"
            android:tint="@android:color/white"/>


        <EditText
            android:id="@+id/register_name_field"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginBottom="6dp"
            android:hint="Enter Full Name"
            android:textColorHint="@android:color/white"/>


        <EditText
            android:id="@+id/register_username_field"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginBottom="6dp"
            android:hint="Enter UserName"
            android:textColorHint="@android:color/white"/>

        <EditText
            android:id="@+id/register_password_field"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginBottom="6dp"
            android:hint="Enter Password"
            android:textColorHint="@android:color/white"/>


        <EditText
            android:id="@+id/register_email_field"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginBottom="6dp"
            android:hint="Enter Email"
            android:textColorHint="@android:color/white"/>

        <Button
            android:id="@+id/register_btn"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:text="create account"/>

    </LinearLayout>

    <Button
        android:id="@+id/go_login_page_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:text="you have an account? login"/>

</RelativeLayout>